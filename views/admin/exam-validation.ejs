

<%- include('../partials/header.ejs') %>

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      text-align: center;
    }

    .logo {
      max-width: 100px;
      margin-bottom: 10px;
    }

    .exam-name {
      font-size: 20px;
      margin-bottom: 15px;
      background-color: white;
    }

    .exam-instruction {
      text-align: left;
      box-shadow: rgba(0, 0, 0, 0.04) 0px 3px 5px;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 7px;
      font-family: kalpurush, sans-serif;
    }

    .registration-label {
      font-size: 16px;
    }

    .registration-input {
      width: 80%;
      padding: 10px;
      margin: 10px 0;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
    }

    .btn-container {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .start-btn {
      width: 48%;
      padding: 10px;
      box-sizing: border-box;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }

    .start-practice-btn {
      background-color: #2196F3; /* Blue color */
      color: #fff;
    }

    .closed-section {
      font-size: 18px;
      margin-top: 20px;
      box-shadow: rgba(0, 0, 0, 0.04) 0px 3px 5px;
      padding: 15px;
      border-radius: 7px;
      color: red;
      font-weight: bold;
      background-color: white!important;
    }

    .date-section {
      font-size: 16px;
      margin-top: 10px;
      box-shadow: rgba(0, 0, 0, 0.04) 0px 3px 5px;
      border-radius: 7px;
      padding: 15px;
      font-weight: bold;
      color: rgb(73, 182, 255);
    }
    


  </style>
</head>

  <body>
    <% if (!examDetails || examDetails.active_status === 'closed') { %>
      <div class="container">
        <img src="/img/logo-02.png" alt="Logo" class="logo">
        <div class="exam-name">Mega Final Model Test 01</div>
        <div class="main-components">
          <div class="closed-section">The exam is closed</div>
        </div>
      </div>
    <% } else if (examDetails.is_anyone && examDetails.active_status === 'open') { %>
      <div class="container">
        <img src="/img/logo-02.png" alt="Logo" class="logo">
        <div class="exam-name">Mega Final Model Test 01</div>
        <div class="main-components">
          <div class="exam-instruction">
            পরীক্ষার্থীদের প্রতি নির্দেশনাবলীঃ
            পরীক্ষায় মোট প্রশ্ন ১০০টি। প্রতি প্রশ্নের মার্ক্স ১ করে মোট মার্ক্স ১০০।
            পরীক্ষার জন্য নির্ধারিত মোট সময় ৫০ মিনিট।
          </div>
          <%= availableExams %>
          <div class="btn-container">
            <% if (!examDetails || examDetails.practice) { %>
            <button class="start-btn start-practice-btn" ><a href="/issb/verbal/<%= examDetails.exam_code %>/practice">Start Practice</a></button>
            <% } %>
            <button class="start-btn"><a href="/issb/verbal/<%= examDetails.exam_code %>/exam">Start Exam</a></button>
          </div>
        </div>
      </div>
    <% } else if (isCoursePurchased && examDetails.active_status === 'open') { %>
      <div class="container">
        <img src="/img/logo-02.png" alt="Logo" class="logo">
        <div class="exam-name">Mega Final Model Test 01</div>
        <div class="main-components">
          <div class="exam-instruction">
            পরীক্ষার্থীদের প্রতি নির্দেশনাবলীঃ
            পরীক্ষায় মোট প্রশ্ন ১০০টি। প্রতি প্রশ্নের মার্ক্স ১ করে মোট মার্ক্স ১০০।
            পরীক্ষার জন্য নির্ধারিত মোট সময় ৫০ মিনিট।
          </div>
          
          <div class="btn-container">
            <% if (!examDetails || examDetails.practice) { %>
              <button class="start-btn start-practice-btn" ><a href="/issb/verbal/<%= examDetails.exam_code %>/practice">Start Practice</a></button>
              <% } %>
            <button class="start-btn"><a href="/issb/verbal/<%= examDetails.exam_code %>/exam">Start Exam</a></button>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="container">
        <img src="https://testmoz.com/ugc/2023-12-17/9ea6383b-44ba-475b-bdc5-0fa2dc94a599-Mission-School-01.png" alt="Logo" class="logo">
        <div class="available-courses">
          <h3>This is Paid batch exam</h3>
            <% availableExams.forEach(function(course) { %>
      
            <div class="course-name"><%= course.course_name %></div>
     
         <% }) %>




        </div>
      </div>
      <%- include('../partials/bottom-nav.ejs') %>

    <% } %>
  </body>
  </html>
  