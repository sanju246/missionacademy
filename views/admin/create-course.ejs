

<%- include('../partials/admin_sidenav.ejs') %>
<style>
  body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
  }

  .create-course-container {
      min-width: 800px;
      margin: 50px auto;
      padding: 20px;
      background-color: rgb(255, 255, 255);
      border-radius: 5px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }

  .create-course-container h1 {
      margin-bottom: 20px;
  }

  .create-course-container label {
      display: block;
      margin-top: 10px;
  }

  .create-course-container input[type="text"],
  .create-course-container textarea {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 5px;
  }

  .create-course-container input[type="radio"] {
      margin-right: 5px;
  }

  .create-course-container button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
  }

  .create-course-container button:hover {
      background-color: #0056b3;
  }
</style>


<div class="create-course-container">
  <h1>Create Course</h1>
  <form method="POST" action="/admin/course/create_course">
      <div>
          <label for="course_name">Course Name</label>
          <input type="text" id="course_name" name="course_name">
      </div>
      <div>
          <label for="thumbnail">Thumbnail URL</label>
          <input type="text" id="thumbnail" name="thumbnail">
      </div>
      <div>
          <label for="course_ads">Course Promo Video</label>
          <input type="text" id="course_ads" name="course_ads">
      </div>
      <div>
          <label for="course_class">Course Class</label>
          <input type="text" id="course_class" name="course_class">
      </div>
      <div>
        <label for="course_exam">Course Exam</label>
        <input type="text" id="course_exam" name="course_exam">
    </div>
    <div>
        <label for="course_note">Course Note</label>
        <input type="text" id="course_note" name="course_note">
    </div>
    <div>
        <label for="course_fee">Course Fee</label>
        <input type="number" id="course_fee" name="course_fee">
    </div>
    <div>
        <label for="course_discount">Course Discount</label>
        <input type="number" id="course_discount" name="course_discount">
    </div>
    <div>
        <label for="course_fb_group">Facebook Group</label>
        <input type="text" id="course_fb_group" name="course_fb_group">
    </div>
      <div>
          <label for="course_description">Course Description</label>
          <textarea id="course_description" name="course_description"></textarea>
      </div>
      <div>
          <label for="is_active">Active:</label>
          <span>Yes</span>
          <input type="radio" id="is_active_yes" name="is_active" value="true">
          <span>No</span>
          <input type="radio" id="is_active_no" name="is_active" value="false">
      </div>
      <div>
          <label for="is_update">Update:</label>
          <span>Yes</span>
          <input type="radio" id="is_update_yes" name="is_update" value="true">
          <span>No</span>
          <input type="radio" id="is_update_no" name="is_update" value="false">
      </div>
      <div>
          <button type="submit">Create Course</button>
      </div>
  </form>
</div>
  

</body>
</html>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

